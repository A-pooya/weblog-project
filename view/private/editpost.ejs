<h3 class="mt-2 text-center">edit post</h3>
<div class="w-50 mx-auto">
    <%- include("../includes/errorsofaddpostpage.ejs")  %> 
</div>
<div class="d-flex align-items-center justify-content-center">
    <form action="/dashboard/edit-post/<%= post._id %> " class="w-50" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">post title</label>
            <input
                type="text"
                class="form-control w-50"
                name="title"
                id="title"
                value="<%= post.title %> "
            />
        </div>

        <div class="form-group">
            <label for="status">state</label>
            <select  name="status" class="form-control w-25" id="status">
                <!-- <option value="general" selected>general</option>
                <option value="private">private</option> -->
                <option value ="<%= post.status  %>" selected><%= post.status === 'general' ? 'general' : 'private'  %></option>
                <option value ="<%= post.status === "general" ? 'private': 'general'  %>"><%= post.status === 'general' ? 'private' : 'general'  %></option> 
            </select>
        </div>
        
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button class="btn btn-sm btn-outline-secondary" type="button" id="imageupload">
                    upload image
                </button>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="selectedimage">
                <label for="selectedimage" class="custom-file-label" id="imagestatus">
                    choose your image
                </label>
            </div>
        </div>

        <div class="w-100  text-center">
            <p id='imageaddress' class="overflow-auto">image address </p>

        </div>

        <div id = "progressdiv" style="display: none;">
            <div class="progress">
                <div
                class="progress-bar progress-bar-striped progress-bar-animated"
                id="progressbar"
                role="progressbar"
                aria-valuemax="100"
                aria-valuemin="0"
                >
                </div>
            </div>
        </div>

        <div class="form-group">
            <h5>your main text</h5>
            <textarea name="body" class="form-control" id="body"><%= post.body %> </textarea>
        </div>
        <h2>we need an image for your post</h2>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button class="btn btn-sm btn-outline-secondary" type="button" id="editpostimage">
                    upload image
                </button>
            </div>
            <div class="custom-file">
                <input type="file" name="thumbnail" class="custom-file-input" id="thumbnail">
                <label for="selectedimage" class="custom-file-label" id="thumbnailstatus">
                    choose your image
                </label>
            </div>
        </div>
        <p>if you dont choose any image we choose an image for your post</p>

        <div class="row">
            <input type="submit" value="submit" class="btn btn-success m-2" />
            <a href="/dashboard" class="btn btn-warning m-2">cancel</a>
        </div>
    </form>
</div>
